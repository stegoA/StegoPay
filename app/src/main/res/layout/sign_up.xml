<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <!-- Top rectangle -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_rectangle"
            android:layout_gravity="top|start"/>

        <!-- Bottom curved rectangle -->
        <View
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/bottom_rounded_rectangle" />

        <!-- Ellipse2 -->
        <View
            android:id="@+id/ellipse_2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="350dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/ellipse_2"
            />

        <!-- Ellipse1-->
        <View
            android:id="@+id/ellipse_1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="280dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="89dp"
            android:background="@drawable/ellipse_1"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <!-- CC Form view-->

        <View
            android:id="@+id/rectangle_8"
            android:layout_width="331dp"
            android:layout_height="395dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cc_form_bg" />

        <!-- First name EditText-->
        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="128dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-68dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="First name"
            android:inputType="text"
            android:textAlignment="center" />

        <!-- Last name EditText-->
        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="128dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Last name"
            android:inputType="text"
            android:textAlignment="center" />

        <!-- Email EditText-->
        <EditText
            android:id="@+id/emailAddressEditText"
            android:layout_width="264dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />


        <!-- Password EditText-->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="264dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <!-- Confirm password EditText-->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="264dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <!-- Sign Up button-->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="174dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="225dp"
            android:backgroundTint="@color/gradient_purple"
            android:elevation="4dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF" />

        <!-- Login redirect -->
        <TextView
            android:id="@+id/logInRedirect"
            android:layout_width="203dp"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="620dp"
            android:clickable="true"
            android:gravity="center_horizontal|top"
            android:text="Already have an account? Log in"
            android:textColor="#978B8B"
            android:textColorHighlight="#D5D3D3" />

        <!-- StegoPay logo -->
        <ImageView
            android:id="@+id/stegopaylogo"
            android:layout_width="159dp"
            android:layout_height="111dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/stegopay_logo" />


    </FrameLayout>
</RelativeLayout>