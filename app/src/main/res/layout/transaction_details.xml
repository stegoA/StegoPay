<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >


    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <!-- Top rectangle -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_rectangle"
            android:layout_gravity="top|start"/>

        <!-- Bottom curved rectangle -->
        <View
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/bottom_rounded_rectangle" />


        <!-- Vendor TextView-->
        <TextView
            android:id="@+id/vendorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/headline"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/transactionDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />


        <!-- Ellipse2 -->
        <View
            android:id="@+id/ellipse_2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="350dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/ellipse_2"
            />

        <!-- Ellipse1-->
        <View
            android:id="@+id/ellipse_1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="280dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="89dp"
            android:background="@drawable/ellipse_1"
            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="640dp">

        <!--  box view-->
        <View
            android:id="@+id/rectangle_8"
            android:layout_width="331dp"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cc_form_bg"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Items"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/currencyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/itemsTextView"
                android:text="Currency:"
                android:layout_toLeftOf="@+id/currencyValueTextView"
                android:layout_marginTop="150dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/currencyValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/currencyTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>



        <!-- Items ListView-->
        <ListView
            android:id="@+id/itemListView"
            android:layout_width="330dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/yourStatsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Your stats with eStore:"
            android:layout_gravity="left|center"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="49dp"
            android:textColor="@color/gradient_purple"
            />



    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="215dp"

        >


        <TextView
            android:id="@+id/monthlyPurchasesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Purchases"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/totalSpendingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spending"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@color/black" />
        <TextView
            android:id="@+id/avgSpendingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Avg. Spending"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />



    </LinearLayout>


<LinearLayout
    android:layout_width="331dp"
    android:layout_height="50dp"
    android:layout_marginTop="510dp"
    android:layout_marginLeft="40dp"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/totalPurchasesValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:textColor="@color/gradient_purple"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/totalSpendingValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gradient_purple"
        android:text=""
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/avgSpendingValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/gradient_purple"
        android:text=""
        android:layout_alignBaseline="@+id/totalSpendingValue"
        android:layout_alignStart="@+id/totalSpendingValue"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="16sp" />


</LinearLayout>









    </FrameLayout>




</RelativeLayout>