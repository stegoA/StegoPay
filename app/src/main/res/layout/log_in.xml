<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <!-- Top rectangle -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_rectangle"
            android:layout_gravity="top|start"/>

        <!-- Bottom curved rectangle -->
        <View
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/bottom_rounded_rectangle" />

        <!-- Ellipse2 -->
        <View
            android:id="@+id/ellipse_2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="350dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/ellipse_2"
            />

        <!-- Ellipse1-->
        <View
            android:id="@+id/ellipse_1"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="280dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="89dp"
            android:background="@drawable/ellipse_1"
            />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <!-- CC Form view-->

        <View
            android:id="@+id/rectangle_8"
            android:layout_width="331dp"
            android:layout_height="351dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/cc_form_bg" />


        <!-- Email EditText-->
        <EditText
            android:id="@+id/userEmailEditText"
            android:layout_width="264dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />


        <!-- Password EditText-->
        <EditText
            android:id="@+id/userPasswordEditText"
            android:layout_width="264dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext_bg"
            android:elevation="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center" />


        <!-- Reset password redirect-->
        <TextView
            android:id="@+id/resetPasswordRedirect"
            android:layout_width="116dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="410dp"
            android:clickable="true"
            android:gravity="center_horizontal|top"
            android:text="Forgot password?"
            android:textColor="#978B8B" />



        <Button
            android:id="@+id/logIn"
            android:layout_width="174dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="225dp"
            android:backgroundTint="@color/gradient_purple"
            android:elevation="4dp"
            android:text="Log In"
            android:textColor="#FFFFFF" />

        <!-- Sign up redirect -->
        <TextView
            android:id="@+id/signUpRedirect"
            android:layout_width="203dp"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="620dp"
            android:clickable="true"
            android:gravity="center_horizontal|top"
            android:text="Don't have an account? Sign Up"
            android:textColor="#978B8B"
            android:textColorHighlight="#D5D3D3" />

        <!-- StegoPay logo -->
        <ImageView
            android:id="@+id/stegopaylogo"
            android:layout_width="159dp"
            android:layout_height="111dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/stegopay_logo" />

        <RelativeLayout
            android:layout_width="420dp"
            android:layout_height="750dp">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="180dp"
                android:indeterminateTint="@color/gradient_purple"
                android:visibility="invisible"
                />
        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>